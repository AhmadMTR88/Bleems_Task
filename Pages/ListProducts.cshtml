@page
@model ListProductsModel
@{
    ViewData["Title"] = "List Products";
}

<h1>List Products</h1>

<table id="productTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <!-- Other table headers -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <!-- Other table cells -->
                <td>
                    <a asp-page="./EditProduct" asp-route-id="@product.Id">Edit</a> |
                    <a asp-page-handler="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#productTable').DataTable();
        });
    </script>
}
