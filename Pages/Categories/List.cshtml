@page
@model Bleems_Task.Pages.Categories.ListModel
@{
}

<h1>Categories</h1>
@if (Model.Categories != null && Model.Categories.Any())
{
    <table id="productTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Active</th>
                <th>Added Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.IsActive</td>
                    <td>@category.CreatedOndate</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No categories available.</p>
}